<tr class="border border-gray-300">
  <td class="py-2 px-4 border border-gray-300"><%= project.name %></td>
  <td class="py-2 px-4 border border-gray-300"><%= project.description %></td>
  <td class="py-2 px-4 border border-gray-300"><%= project.status %></td>
  <td class="py-2 px-4 border border-gray-300"><%= project.priority %></td>
  <td class="py-2 px-4 border border-gray-300"><%= project.start_date %></td>
  <td class="py-2 px-4 border border-gray-300"><%= project.end_date %></td>
  <td class="py-2 px-4 border border-gray-300">
    <%= button_to 'Destroy', project, method: :delete, class: "text-red-500 hover:text-red-700" %>
  </td>
</tr>
